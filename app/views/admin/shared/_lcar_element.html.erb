<% if link_path %>
  <%= link_to link_path,
    class: "element",
    style: "height: #{height};
    width: #{(1 / sm_count) * 100}%;
    background-color: #{background_color};
    background-image: url(#{url_for(element.banner)})" do %>
    <div class="project-card-categories">
      <% element.services.each do |service| %>
        <%= image_tag service.photo, alt: "alttext", class: "service-svg-vsmall" %>
      <% end %>
    </div>
    <h5><%= element.name %></h5>
    <p><%= element.location %> | <%= element.services_sentence %></p>
  <% end %>
<% else %>
  <div
    class="element"
    style="
      height: <%= height %>;
      width: <%= (1 / sm_count) * 100 %>%;
      background-color: <%= background_color %>;
    ">
    <div class="project-card-categories">
      <% element.services.each do |service| %>
        <%= image_tag service.photo, alt: "alttext", class: "service-svg-vsmall" %>
      <% end %>
    </div>
    <h5><%= element.name %></h5>
    <p><%= element.location %> | <%= element.services_sentence %></p>
  </div>
<% end %>

