<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "seven.svg", class: 'seven-logo' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item flex-center active">
          <%= link_to "ACADEMY", root_path, class: "nav-link white-imp flex-lm" %>
        </li>
        <li class="nav-item flex-center active">
          <%= link_to "COURSES", courses_path, class: "nav-link white-imp flex-lm" %>
        </li>
        <li class="nav-item flex-center active">
          <%= link_to "EMPLOYERS", employers_path, class: "nav-link white-imp flex-lm" %>
        </li>
        <li class="nav-item flex-center active">
          <%= link_to "CONSULTANCY", "https://7consulting.co.uk/", class: "nav-link white-imp flex-lm", target: "_blank" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item flex-center active">
            <%= link_to my_courses_path, class: "nav-link white-imp flex-lm" do %>
             <i class="fas fa-user-circle" style="font-size: 1.75rem;"></i>
             <p>MY ACCOUNT</p>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item flex-center active">
            <%= link_to "LOGIN", new_user_session_path, class: "nav-link white-imp flex-lm" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
